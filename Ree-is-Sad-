    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="site-title">Your Website Name</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
            transition: background-color 0.5s, background-image 0.5s;
            background-color: #FFFFFF; /* Default background color */
        }
        #apology-message {
            font-size: 20px;
            transition: font-size 0.5s;
        }
        #picture {
            display: none;
            margin-top: 20px;
            width: auto; /* Default width */
            height: auto; /* Default height */
            max-width: 300px; /* Max width for responsiveness */
            max-height: 200px; /* Max height for responsiveness */
            object-fit: cover; /* Ensures images cover the area without distortion */
            display: block; /* Ensure it is a block-level element for centering */
            margin-left: auto;
            margin-right: auto;
        }
        #apology-message.smaller {
            font-size: 14px;
        }
        #apology-message.disappear {
            display: none;
        }
        #buttons-container {
            margin-bottom: 20px;
        }
        #reset-button {
            display: block;
            margin-top: 20px;
        }
    </style>
